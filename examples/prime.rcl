# -*- mode: ruby -*-

#include ../selfhost/lib/std.pric
#include ../selfhost/lib/types.pric

def is_prime(primes_, n)
  var i;
  var prime;

  i = 0;
  while (true)
    if (__le(List_size(primes_), i))
      return true;
    else
      prime = List_get_as_int(primes_, i);

      case
      when (n < (prime * prime))
        return true;
      when (__mod(n, prime) == 0)
        return false;
      end
    end

    i = i + 1;
  end

  return true;
end

def main()
  var [1]g;
  var n;
  var primes_;

  # init globals
  init_alloc_cursor(&g);

  primes_ = List_new(&g);

  n = 2;
  while (n < 101)
    if (is_prime(primes_, n))
      print_i(n);
      putchar(C_LF());

      List_add_int(&g, primes_, n);
    end

    n = n + 1;
  end
end
